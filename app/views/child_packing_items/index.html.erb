<%= render "shared/header"%>
<div class="child-items-upper-container">
  <%# <h1>УЄфтѕєсЂ«УЇиуЅЕсѓњТ║ќтѓЎсЂЌсѓѕсЂє!</h1> %>

  <div class="child-items-status">
    <% if @child_packing_items.any? && @child_packing_items.all? { |item| item.is_event_completed } %>
      <p class="status-text">­ЪјЅ УЄфтѕєсЂ«УЇиуЅЕсЂ«Т║ќтѓЎсЂїт«їС║єсЂЌсЂЙсЂЌсЂЪ№╝Ђ ­ЪјЅ</p>
    <% else %>
      <p class="status-text">Рџа№ИЈ Т║ќтѓЎСИГсЂДсЂЎсђѓУЄфтѕєсЂ«УЇиуЅЕсѓњТ║ќтѓЎсЂЌсѓѕсЂє№╝Ђ</p>
    <% end %>
  </div>

  <div class="child-items-input-section">
    <% if @edit_item %>
      <h3>сѓбсѓцсЃєсЃасѓњуиежЏє</h3>
      <%= form_with model: [@trip, @edit_item], local: true, method: :patch do |f| %>
        <div class="form-row">
          <div>
            <%= f.label :name, "сѓбсѓцсЃєсЃатљЇ" %>
            <%= f.text_field :name, value: @edit_item.name, placeholder: "СЙІ: уЮђТЏ┐сЂѕ" %>
          </div>
          <div>
            <%= f.label :quantity, "тђІТЋ░" %>
            <%= f.number_field :quantity, value: @edit_item.quantity, min: 1 %>
          </div>
          <%= f.submit "тцЅТЏ┤сЂЎсѓІ", class: "btn btn-primary" %>
          <%= link_to "сѓГсЃБсЃ│сѓ╗сЃФ", trip_child_packing_items_path(@trip), class: "btn btn-secondary" %>
        </div>
      <% end %>
    <% else %>
      <h3>СИІсЂ«УЇиуЅЕсЃфсѓ╣сЃѕсЂФУЇиуЅЕсѓњУ┐йтіа</h3>
      <%= form_with model: [@trip, @child_packing_item], local: true do |f| %>
        <div class="form-row">
          <div>
            <%= f.label :name, "сѓбсѓцсЃєсЃатљЇ" %>
            <%= f.text_field :name, placeholder: "СЙІ: TсѓисЃБсЃё" %>
          </div>
          <div>
            <%= f.label :quantity, "тђІТЋ░" %>
            <%= f.number_field :quantity, min: 1, value: 1 %>
          </div>
          <%= f.submit "У┐йтіасЂЎсѓІ", class: "btn btn-primary" %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="child-items-menu-section">
    <%= button_to "С║ІтЅЇУеГт«џсЂ«сѓбсѓцсЃєсЃасѓњтЈќсѓіУЙ╝сѓђ", "#", method: :post, class: "btn btn-secondary" %>
    <%= button_to "сЂЎсЂ╣сЂдт«їС║є№╝Ђ", "#", method: :post, class: "btn btn-success", data: { turbo: false } %>
  </div>
</div>

<div class="child-items-lower-section">
  <h3>УЇиуЅЕсЃфсѓ╣сЃѕ</h3>
  <table class="child-items-table">
    <thead>
      <tr>
        <th>сѓбсѓцсЃєсЃатљЇ</th>
        <th>тђІТЋ░</th>
        <th>ТЊЇСйю</th>
      </tr>
    </thead>
    <tbody>
      <% @child_packing_items.each do |item| %>
        <% next if item.id.nil? %> <!-- IDсЂїnilсЂ«та┤тљѕсЂ»сѓ╣сѓГсЃЃсЃЌ -->
        <tr>
          <td><%= item.name %></td>
          <td><%= item.quantity %></td>
          <td>
            <%= link_to "уиежЏє", trip_child_packing_items_path(@trip, id: item.id), class: "btn btn-sm btn-warning" %>
            <%= link_to "тЅіжЎц", trip_child_packing_item_path(@trip, item), data: { turbo_method: :delete }, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= render "shared/footer" %>